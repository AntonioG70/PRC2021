extends layout
block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Página de #{idPeriodo}

        if info.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th Número 
                    tr
                        each p in info
                            if p.p == 'number'
                                td= p.o
                .w3-card-4
                    header.w3-container.w3-teal
                        h3 Elementos                         
                table(class="w3-table-all")       
                    each p in info
                        if p.p != 'type' && p.p != 'number'
                            tr
                                td
                                    a(href='http://localhost:7777/elementos/' + p.o) #{p.o}
        else
          div(class="w3-container")
            p Periodo sem propriedades ... 
        footer(class="w3-container w3-teal")
            a(href='http://localhost:7777/periodos') Voltar à página dos Periodos
            address Gerado por António :: 2021-Março
                