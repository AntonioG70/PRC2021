extends layout
block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Página de #{idElem}

        if info.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        each e in info
                            if e.p != 'type'
                                th= e.p
                    tr         
                        each e in info
                            if e.p == 'group'
                                td
                                    a(href='http://localhost:7777/grupos/' + e.o) #{e.o}
                            else if e.p == 'period'
                                td
                                    a(href='http://localhost:7777/periodos/' + e.o) #{e.o}             
                            else if e.p != 'type'
                                td= e.o
        else
          div(class="w3-container")
            p Elemento sem propriedades ... 
        footer(class="w3-container w3-teal")
            a(href='http://localhost:7777/elementos') Voltar à página dos Elementos
            address Gerado por António :: 2021-Março
                